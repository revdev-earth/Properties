model Architecture {
    id         String   @id @default(uuid())
    propertyId String // Relationship with the property
    property   Property @relation(fields: [propertyId], references: [id])

    maintenances Maintenance[]
    parentId     String? // To model sub-elements (optional)
    parent       Architecture?  @relation("ParentChild", fields: [parentId], references: [id])
    subelements  Architecture[] @relation("ParentChild")

    name        String // General type of the element (e.g., "wall", "floor", "garden")
    description String? // Detailed description of the element

    // Geo-referencing
    mapCoordinates String? // Coordinates for map localization (e.g., GeoJSON or "x,y")
    areaDimensions String? // Area dimensions (e.g., "5x5 meters")

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
