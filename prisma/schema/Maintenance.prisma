model Maintenance {
    id             String        @id @default(uuid())
    architectureId String? // Optional relationship with an architecture element
    architecture   Architecture? @relation(fields: [architectureId], references: [id])

    equipmentId String? // Optional relationship with equipment
    equipment   Equipment? @relation(fields: [equipmentId], references: [id])

    Transaction Transaction[] // Associated transactions

    category            String // "architecture" or "equipment"
    type                String // "preventive", "corrective", or "request"
    description         String // Task or damage description
    maintenanceDate     DateTime // Maintenance date
    nextMaintenanceDate DateTime? // Next scheduled maintenance
    costResponsible     String // "tenant" or "owner"
    repairCost          Float? // Repair cost
    warranty            String? // Warranty details (if applicable)
    status              String? // Status: "pending", "in_progress", "completed"
    observations        String? // Additional notes

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
